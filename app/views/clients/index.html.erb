<% if params[:user_id] %>
  <h1>Listing <%= @user_name %>'s clients</h1>
<% else %>
  <h1>Listing clients</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email address</th>
      <th>Mobile phone number</th>
      <th>User</th>      
      <th>Has auto</th>
      <th>Has home</th>
      <th>Has life</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.email_address %></td>
        <td><%= client.mobile_phone_number %></td>
        <td><%= client.user.full_name %></td>
        <td><%= client.has_auto %></td>
        <td><%= client.has_home %></td>
        <td><%= client.has_life %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
